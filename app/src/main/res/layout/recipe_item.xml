<!-- res/layout/item_recipe.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"

    android:backgroundTint="#545454"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:scaleType="centerCrop"
        android:src="@drawable/carbonara1"
        android:background="@drawable/border" /> <!-- Add border here -->
</androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/carbonara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbonara"
            android:fontFamily="@font/poppins"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Item Description -->
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A carbonara dish is a creamy Italian pasta made with eggs, cheese, pancetta or bacon, and black pepper."
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/mulish"
            android:layout_marginTop="4dp" />

        <!-- View Button -->

    </LinearLayout>
</androidx.cardview.widget.CardView>